---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import BackgroundPattern from '../components/BackgroundPattern.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} subtitle='Artículos'  />
		<style>
			.hero-section {
				margin-bottom: 2rem;
			}
			.hero-content {
				max-width: 800px;
				margin: 0 auto;
			}
			.date {
				color: #6b7280;
				font-size: 0.9rem;
			}
			.last-updated-on {
				font-style: italic;
				color: #6b7280;
			}
			.prose {
				max-width: 800px;
				margin: 0 auto;
				color: #374151;
				line-height: 1.7;
				font-size: 1rem;
			}
			.prose :global(h2) {
				color: #111827;
				font-size: 1.35rem;
				margin: 2rem 0 1rem;
				font-weight: 600;
			}
			.prose :global(h3) {
				color: #111827;
				font-size: 1.2rem;
				margin: 1.5rem 0 0.75rem;
				font-weight: 600;
			}
			.prose :global(p) {
				margin: 1.5rem 0;
			}
			.prose :global(img) {
				max-width: 100%;
				height: auto;
				border-radius: 0.5rem;
			}
			.prose :global(pre) {
				background: #f3f4f6;
				padding: 1rem;
				border-radius: 0.5rem;
				overflow-x: auto;
			}
			.prose :global(code) {
				font-family: monospace;
			}
			.prose :global(a) {
				color: #22c55e;
				text-decoration: none;
			}
			.prose :global(a:hover) {
				text-decoration: underline;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-section">
					<div class="hero-content">
						<div class="title">
							<h1>{title}</h1>
							<div class="date">
								<FormattedDate date={pubDate} />
								{
									updatedDate && (
										<div class="last-updated-on">
											Última actualización: <FormattedDate date={updatedDate} />
										</div>
									)
								}
							</div>
						</div>
					</div>
				</div>

				<div class="prose">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
