---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const projects = (await getCollection('projects')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={`Proyectos - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <section>
                <h1>Proyectos Realizados</h1>
                <p>Aquí encontrarás algunos de los proyectos más destacados en los que he trabajado.</p>
                
                <div class="projects-grid">
                    {
                        projects.map((project) => (
                            <article class="project-card">
                                <a href={`/projects/${project.slug}/`}>
                                    <img 
                                        width={720} 
                                        height={360} 
                                        src={project.data.heroImage} 
                                        alt={`Captura de pantalla de ${project.data.title}`} 
                                    />
                                    <h2 class="title">{project.data.title}</h2>
                                    <p class="description">{project.data.description}</p>
                                    
                                    {project.data.technologies && (
                                        <div class="technologies">
                                            {project.data.technologies.map((tech) => (
                                                <span class="tech-tag">{tech}</span>
                                            ))}
                                        </div>
                                    )}
                                </a>
                            </article>
                        ))
                    }
                </div>
            </section>
        </main>
        <Footer />

        <style>
            .projects-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 2rem;
                padding: 2rem 0;
            }

            .project-card {
                border-radius: 8px;
                background: white;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease;
                overflow: hidden;
            }

            .project-card:hover {
                transform: translateY(-5px);
            }

            .project-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

            .project-card a {
                text-decoration: none;
                color: inherit;
            }

            .project-card .title {
                margin: 1rem;
                font-size: 1.5rem;
                color: var(--accent);
            }

            .project-card .description {
                margin: 0 1rem 1rem;
                font-size: 0.9rem;
                color: #666;
            }

            .technologies {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                margin: 1rem;
            }

            .tech-tag {
                background: var(--accent);
                color: white;
                padding: 0.2rem 0.6rem;
                border-radius: 15px;
                font-size: 0.8rem;
            }
        </style>
    </body>
</html> 