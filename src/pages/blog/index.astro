---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead 
			title={SITE_TITLE} 
			subtitle='Blog'
			description={SITE_DESCRIPTION} 
		/>
		<style>
			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem;
			}
			.blog-header {
				text-align: center;
				margin: 0.5rem 0.5rem 2rem;
				padding: 1.5rem 0.5rem;
				background: linear-gradient(135deg, rgba(var(--accent-light), 0.1), rgba(var(--accent-dark), 0.1));
				border-radius: 0.5rem;
				max-width: 100%;
			}
			.blog-header h1 {
				font-size: 2.5rem;
				color: rgb(var(--accent));
				margin-bottom: 0.75rem;
				line-height: 1.2;
				font-weight: bold;
			}
			.blog-header p {
				color: rgb(var(--gray));
				max-width: 600px;
				margin: 0 auto;
				padding: 0 0.5rem;
				line-height: 1.4;
				font-size: 0.95rem;
			}
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				background: white;
				border-radius: 1rem;
				overflow: hidden;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
				transition: transform 0.3s ease;
			}
			ul li:hover {
				transform: translateY(-5px);
			}
			ul li img {
				width: 100%;
				aspect-ratio: 16/9;
				object-fit: cover;
			}
			ul li a {
				text-decoration: none;
				color: inherit;
			}
			.content {
				padding: 1.5rem;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.4;
				font-size: 1.2rem;
			}
			.date {
				margin: 0.5rem 0 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}
			@media (max-width: 768px) {
				main {
					padding: 0;
				}
				ul {
					grid-template-columns: 1fr;
					gap: 1.5rem;
					padding: 0 0.5rem;
				}
				.blog-header {
					margin: 0 0 1.5rem;
					padding: 1rem 0.5rem;
					border-radius: 0;
				}
				.blog-header h1 {
					font-size: 1.75rem;
					margin-bottom: 0.5rem;
				}
				.blog-header p {
					font-size: 0.9rem;
					padding: 0 1rem;
				}
				.content {
					padding: 1rem;
				}
				.title {
					font-size: 1.1rem;
				}
			}

			@media (min-width: 769px) and (max-width: 1024px) {
				ul {
					grid-template-columns: repeat(2, 1fr);
				}
				main {
					padding: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="blog-header">
				<h1>{SITE_TITLE}</h1>
				<p>{SITE_DESCRIPTION}</p>
			</div>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<div class="content">
										<h2 class="title">{post.data.title}</h2>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
