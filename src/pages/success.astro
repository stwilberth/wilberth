---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="es">
<head>
    <BaseHead 
        title={`Mensaje Enviado | ${SITE_TITLE}`}
        description="Gracias por tu mensaje. Me pondré en contacto contigo lo antes posible."
    />
</head>
<body>
    <Header />
    <main style="text-align: center; padding: 4rem 1rem">
        <h1>¡Mensaje Recibido! ✅</h1>
        <p style="font-size: 1.2rem; margin: 2rem 0">Gracias por contactarme. Responderé tu mensaje dentro de las próximas 24 horas.</p>
        <a href="/" class="service-link">Volver al Inicio</a>
    </main>
    <Footer />
</body>
</html>
