---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PricingWeb from '../components/PricingWeb.astro';
import { SITE_TITLE, SITE_SUBTITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead 
            title={`Desarrollo Web | ${SITE_TITLE}`}
            description="Desarrollo web profesional con las últimas tecnologías. Sitios web optimizados, responsivos y de alto rendimiento." 
        />
    </head>
    <body>
        <Header />
        <main>
            <section class="pricing-header">
                <h1>Desarrollo Web</h1>
                <p>Sitios web profesionales con las últimas tecnologías</p>
            </section>

            <section class="web-services">
                <PricingWeb />
            </section>
        </main>
        <Footer />

        <style>
            .pricing-header {
                text-align: center;
                margin-bottom: 3rem;
            }

            .pricing-header h1 {
                font-size: 2.5rem;
                color: var(--accent);
                margin-bottom: 1rem;
            }

            .pricing-header p {
                font-size: 1.2rem;
                color: rgb(var(--gray));
                max-width: 600px;
                margin: 0 auto;
            }

            .web-services {
                margin: 4rem 0;
            }

            @media (max-width: 768px) {
                .pricing-header h1 {
                    font-size: 2rem;
                }

                .pricing-header p {
                    font-size: 1rem;
                }
            }
        </style>
    </body>
</html>
