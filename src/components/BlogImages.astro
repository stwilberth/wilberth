---
const { type } = Astro.props;
---

{type === 'trends' && (
  <div class="blog-image trends-image">
    <div class="design-elements">
      <div class="mockup">
        <div class="browser-bar">
          <span class="dot"></span>
          <span class="dot"></span>
          <span class="dot"></span>
        </div>
        <div class="content">
          <div class="header"></div>
          <div class="body">
            <div class="column"></div>
            <div class="column"></div>
          </div>
        </div>
      </div>
      <div class="floating-elements">
        <div class="element"></div>
        <div class="element"></div>
        <div class="element"></div>
      </div>
    </div>
  </div>
)}

{type === 'seo' && (
  <div class="blog-image seo-image">
    <div class="graph-container">
      <div class="bar-graph">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>
      <div class="search-result">
        <div class="result-title"></div>
        <div class="result-description"></div>
      </div>
    </div>
  </div>
)}

{type === 'email' && (
  <div class="blog-image email-image">
    <div class="email-container">
      <div class="email-header">
        <div class="subject"></div>
        <div class="from"></div>
      </div>
      <div class="email-body">
        <div class="content-block"></div>
        <div class="content-block"></div>
        <button class="cta"></button>
      </div>
    </div>
  </div>
)}

{type === 'website' && (
  <div class="blog-image website-image">
    <div class="devices">
      <div class="desktop">
        <div class="screen">
          <div class="content">
            <div class="nav"></div>
            <div class="hero"></div>
          </div>
        </div>
      </div>
      <div class="mobile">
        <div class="screen">
          <div class="content">
            <div class="nav"></div>
            <div class="hero"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
)}

<style>
  .blog-image {
    width: 100%;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
  }

  /* Trends Image Styles */
  .trends-image {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  }

  .design-elements {
    padding: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    position: relative;
  }

  .mockup {
    background: white;
    border-radius: 8px;
    width: 80%;
    height: 70%;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    overflow: hidden;
  }

  .browser-bar {
    background: #f1f5f9;
    padding: 0.5rem;
    display: flex;
    gap: 0.5rem;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #e2e8f0;
  }

  .content {
    padding: 1rem;
  }

  .header {
    height: 30px;
    background: #e2e8f0;
    margin-bottom: 1rem;
    border-radius: 4px;
  }

  .body {
    display: flex;
    gap: 1rem;
  }

  .column {
    flex: 1;
    height: 150px;
    background: #f1f5f9;
    border-radius: 4px;
  }

  .floating-elements {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .element {
    position: absolute;
    width: 40px;
    height: 40px;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
  }

  .element:nth-child(1) { top: 20%; left: 10%; animation: float 3s ease-in-out infinite; }
  .element:nth-child(2) { top: 60%; right: 15%; animation: float 4s ease-in-out infinite; }
  .element:nth-child(3) { bottom: 15%; left: 20%; animation: float 5s ease-in-out infinite; }

  /* SEO Image Styles */
  .seo-image {
    background: linear-gradient(135deg, #10b981, #3b82f6);
  }

  .graph-container {
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
  }

  .bar-graph {
    display: flex;
    align-items: flex-end;
    gap: 1rem;
    height: 200px;
  }

  .bar {
    flex: 1;
    background: rgba(255,255,255,0.2);
    border-radius: 4px 4px 0 0;
    animation: grow 2s ease-out forwards;
  }

  .bar:nth-child(1) { height: 60%; }
  .bar:nth-child(2) { height: 80%; }
  .bar:nth-child(3) { height: 95%; }
  .bar:nth-child(4) { height: 70%; }

  .search-result {
    background: white;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }

  .result-title {
    height: 20px;
    background: #e2e8f0;
    margin-bottom: 0.5rem;
    border-radius: 4px;
    width: 70%;
  }

  .result-description {
    height: 40px;
    background: #f1f5f9;
    border-radius: 4px;
  }

  /* Email Image Styles */
  .email-image {
    background: linear-gradient(135deg, #f59e0b, #ef4444);
  }

  .email-container {
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .email-header {
    background: white;
    padding: 1rem;
    border-radius: 8px 8px 0 0;
  }

  .subject {
    height: 20px;
    background: #e2e8f0;
    margin-bottom: 0.5rem;
    border-radius: 4px;
    width: 60%;
  }

  .from {
    height: 15px;
    background: #f1f5f9;
    border-radius: 4px;
    width: 40%;
  }

  .email-body {
    background: white;
    padding: 1rem;
    border-radius: 0 0 8px 8px;
    margin-top: 2px;
  }

  .content-block {
    height: 15px;
    background: #f1f5f9;
    margin-bottom: 0.5rem;
    border-radius: 4px;
  }

  .cta {
    height: 40px;
    background: #3b82f6;
    border: none;
    border-radius: 8px;
    width: 150px;
    margin-top: 1rem;
  }

  /* Website Image Styles */
  .website-image {
    background: linear-gradient(135deg, #6366f1, #ec4899);
  }

  .devices {
    padding: 2rem;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .desktop {
    width: 70%;
    background: white;
    border-radius: 8px;
    padding: 8px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  .mobile {
    width: 20%;
    background: white;
    border-radius: 8px;
    padding: 8px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  .screen {
    background: #f8fafc;
    border-radius: 4px;
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .mobile .screen {
    aspect-ratio: 9/16;
  }

  .nav {
    height: 20px;
    background: #e2e8f0;
    margin-bottom: 0.5rem;
  }

  .hero {
    height: calc(100% - 25px);
    background: #f1f5f9;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes grow {
    from { transform: scaleY(0); }
    to { transform: scaleY(1); }
  }

  @media (max-width: 768px) {
    .blog-image {
      height: 300px;
    }

    .devices {
      flex-direction: column;
      gap: 1rem;
    }

    .desktop, .mobile {
      width: 100%;
    }
  }
</style>
