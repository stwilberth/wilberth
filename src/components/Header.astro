---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h1><a href="/">{SITE_TITLE}</a></h1>
		<button class="mobile-menu-button" aria-label="Menu">
			<span class="hamburger"></span>
		</button>
		<div class="internal-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/pricing">Precios</HeaderLink>
			<HeaderLink href="/about">Sobre m√≠</HeaderLink>
			<HeaderLink href="/projects">Proyectos</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 1em 4em;
		background: white;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		position: sticky;
		top: 0;
		z-index: 1000;
	}
	nav {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		align-items: center;
		flex-wrap: wrap;
		gap: 3em;
	}
	h1 {
		margin: 0;
		font-size: 1.5em;
	}
	h1 a {
		color: #2d3748;
		font-weight: 700;
		text-decoration: none;
	}
	.internal-links {
		display: flex;
		gap: 2.5em;
		margin: 0;
	}
	.mobile-menu-button {
		display: none;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5em;
	}
	.hamburger {
		display: block;
		width: 24px;
		height: 2px;
		background: #2d3748;
		position: relative;
		transition: background 0.2s ease-out;
	}
	.hamburger::before,
	.hamburger::after {
		content: '';
		position: absolute;
		width: 24px;
		height: 2px;
		background: #2d3748;
		transition: transform 0.2s ease-out;
	}
	.hamburger::before {
		top: -6px;
	}
	.hamburger::after {
		bottom: -6px;
	}
	.mobile-menu-button[aria-expanded="true"] .hamburger {
		background: transparent;
	}
	.mobile-menu-button[aria-expanded="true"] .hamburger::before {
		transform: rotate(45deg);
		top: 0;
	}
	.mobile-menu-button[aria-expanded="true"] .hamburger::after {
		transform: rotate(-45deg);
		bottom: 0;
	}

	@media (max-width: 720px) {
		header {
			padding: 1em 2em;
		}
		nav {
			gap: 1em;
			justify-content: space-between;
		}
		.mobile-menu-button {
			display: block;
			order: 1;
		}
		.internal-links {
			display: none;
			width: 100%;
			flex-direction: column;
			gap: 1em;
			padding: 1em 0;
			order: 2;
		}
		.internal-links.show {
			display: flex;
		}
	}
</style>

<script>
	const mobileMenuButton = document.querySelector('.mobile-menu-button');
	const internalLinks = document.querySelector('.internal-links');

	mobileMenuButton?.addEventListener('click', () => {
		const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
		mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
		internalLinks?.classList.toggle('show');
	});
</script>
